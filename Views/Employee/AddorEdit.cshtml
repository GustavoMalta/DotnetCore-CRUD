@model DotnetCRUD.Models.Employee

@{
    ViewData["Title"] = "Create";
}
@if (this.Model.EmployeeId != 0)
{
    <h1>Editar</h1>
}
else
{
    <h1>Criar</h1>
}
<div class="col-6 row justify-content-between align-items-center">
    <h4>Funcionário</h4>
    @if (this.Model.EmployeeId != 0)
    {
        <div class="custom-control custom-switch">
            <input type="checkbox" asp-for="Active" class="custom-control-input" id="customSwitch1" active>
            <label class="custom-control-label" for="customSwitch1"> @Html.DisplayNameFor(model => model.Active)</label>
        </div>
    }
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddorEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="row ">
                <div class="form-group col-md-6">
                    <label asp-for="EmpCode" class="control-label"></label>
                    <input asp-for="EmpCode" class="form-control" />
                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="position" class="control-label"></label>
                    <input asp-for="position" class="form-control" />
                    <span asp-validation-for="position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OfficeLocation" class="control-label"></label>
                <input asp-for="OfficeLocation" class="form-control" />
                <span asp-validation-for="OfficeLocation" class="text-danger"></span>
            </div>

            <div class="row justify-content-between">
                <div class="form-group col-3">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
                <div class="form-group col-3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
